<%- include('../layout/header.ejs') %>
    <h2 class="text-center">Your Blogs</h2>
    <div class="container home-box">
        <form action="/blog/create" method="GET" class="mt-4">
            <button type="submit" class="btn btn-success btn-lg">Create a new Blog</button>
        </form>
        <ul class="list-group mt-4">
            <% blogs.forEach(blog=> { %>
                <li>
                    <div>
                        <h2>
                            <%= blog.title %>
                        </h2>
                    </div>
                    <hr>
                    <div class="blog-content">
                        <p>
                            <%= blog.content %>
                        </p>
                    </div>
                    <div>
                        <div class="home-buttons">
                            <form action="/blog/edit/<%= blog._id %>" method="GET">
                                <button type="submit" class="btn btn-primary">Edit</button>
                            </form>
                            <form action="/blog/delete/<%= blog._id %>" method="POST">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </li>
                <% }) %>
        </ul>
    </div>

    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    </html>
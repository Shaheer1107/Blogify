<%- include('../layout/header.ejs') %>

  <h2 class="text-center mt-5">Create a new Blog</h2>
  <div class="container">
    <div class="container create-box">
      <form action="/blog/create" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label">Blog Title</label>
          <input type="text" class="form-control" id="title" name="title" placeholder="Enter blog title" required>
        </div>

        <div class="mb-3">
          <label for="content" class="form-label">Content</label>
          <textarea class="form-control contentinput" id="content" name="content" rows="5"
            placeholder="Write your blog content here..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create Blog</button>
      </form>
    </div>
  </div>


  </body>
